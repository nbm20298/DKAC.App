@model DKAC.App.Models.DepartmentModel
@* @{
    ViewData["Title"] = Model != null ? "Edit" : "Create";
} *@

<h1>Create Department</h1>
<hr />
<div class="">
    <div class="col-md-4 w-100 mt-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="DepartmentId" type="hidden" />
            <div class="form-group">
                <label asp-for="DepartmentName" class="control-label h2 mb-4"></label>
                <input asp-for="DepartmentName" class="form-control h1" placeholder="Department Name"/>
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group d-flex">
                <input type="submit" value="Save" class="btn btn-primary " style="width: 10rem; height: 5rem"/>
                &nbsp; 
                <a asp-action="Index" asp-controller="DepartmentManager" class="btn btn-warning d-flex justify-content-center align-items-center text-center" style="width: 10rem; height: 5rem">Cancel</a>
            </div>
        </form>
    </div>
</div>
