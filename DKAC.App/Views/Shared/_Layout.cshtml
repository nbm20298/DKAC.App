<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DKAC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DKAC.styles.css" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- font awesome cdn link  -->
    <script src="https://kit.fontawesome.com/febe89c5bb.js" crossorigin="anonymous"></script>
    <!-- swiper cdn link -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <!-- custom css link -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
</head>
<body>
    @* Header *@
    @{
        await Html.RenderPartialAsync("_Header");
    }

    @* Main *@
    <div class="container-fluid pt-5 m-5 ">
        <main role="main" class="pb-3 pt-5 pe-5 me-5 ms-0 mt-5">
            @RenderBody()
        </main>
    </div>

    @* Footer *@
    @{
        await Html.RenderPartialAsync("_Footer");
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await Component.InvokeAsync("NToastNotify")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
