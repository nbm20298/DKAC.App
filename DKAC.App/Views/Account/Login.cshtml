@model LoginModel



<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form asp-controller="Account" asp-action="Login" class="login-form">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label h4">User Name</label>
                        <input type="text" asp-for="UserName" class="form-control form-control-lg" />
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <label class="form-label h4">Password</label>
                        <input type="password" asp-for="Password" class="form-control form-control-lg" />
                    </div>

                    <div class="mb-4">
                        <!-- Checkbox -->
                        @* <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                            <label class="form-check-label h4" for="form1Example3"> Remember me </label>
                        </div> *@
                        <a asp-controller="Account" asp-action="SignUp" class="h4">Create account</a>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block col-md-12">Sign in</button>

                </form>
            </div>
        </div>
    </div>
</section>